CXX           = g++
DEFINES       = -O3 -Wall -ffast-math -pthread
CXXFLAGS      = -m64 -mpowerpc64 $(DEFINES)
INCDIR        = -I. -I/usr/include/powerpc-linux-gnu
LINKLIBS      = -lstdc++ -lm -lpthread
STRIP         = strip
AR            = ar rcs
DEL           = rm -rf
MKDIR         = mkdir -p
FORMAT        = astyle -A1
TAR           = tar
COMPRESS      = gzip -9f
